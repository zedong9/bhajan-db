extends default

block content
    script.
        $(document).ready(function() {
            $('#search').on('click', function () {
                search_redirect($('#query').val());
            });

            $('#query').keydown(function (event) {
                if (event.keyCode === 13) {search_redirect($('#query').val());}
            });
        });
    .col-lg-6.col-lg-offset-3
        .row: .col-lg-12: h1.text-center #{project}
        .row: .col-lg-12
                label.sr-only(for='query')
                .input-group
                    input#query.form-control(type='text', placeholder='Search bhajan lyrics...')
                    span.input-group-btn
                        button#search.btn.btn-primary(type='button', role='search') Search

