extends default


block content
    script(type="text/javascript")
        $(document).ready(function() {
            $('#search').on('click', function () {
                window.location = '/search/' + $('#query').val();
            });
        });
    h1= title
    p Welcome to #{name}
    input#query(placeholder='Search bhajan lyrics...')
    button#search.btn.btn-primary(type="button") Search

