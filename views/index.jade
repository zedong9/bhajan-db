extends default

block content
    script.
        $(document).ready(function() {
            $('#search').on('click', function () {
                search_redirect($('#query').val());
            });

            $('#query').keydown(function (event) {
                if (event.keyCode === 13) {search_redirect($('#query').val());}
            });
        });
    .col-md-6.col-md-offset-3
        .row: .col-md-12: h1.text-center #{project}
        .row: .col-md-12.input-group
            label.sr-only(for='query')
            input#query.col-md-12.form-control(type='text', placeholder='Search bhajan lyrics...')
            span.input-group-btn
                button#search.btn.btn-primary(type='submit', role='search') Search

